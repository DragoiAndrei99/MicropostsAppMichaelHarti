<%= form_with(model: @user, local: true, class: "max-w-md mx-auto space-y-4") do |f| %>
  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
  </div>

  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
  </div>

  <div>
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm", autocomplete: "off" %>
    <p class="text-xs text-gray-500 mt-1">Leave blank if you don't want to change it</p>
  </div>

  <div>
    <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password_confirmation, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm", autocomplete: "off" %>
  </div>

  <div>
    <%= f.submit "Save changes", class: "w-full py-2 px-4 bg-indigo-600 text-white rounded-md hover:bg-indigo-700" %>
  </div>
<% end %>
