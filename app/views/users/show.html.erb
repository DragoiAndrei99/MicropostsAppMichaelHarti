<% content_for :title, @user.name %>

<div class="md:w-2/3 w-full mx-auto">
  <div class="flex flex-col sm:flex-row justify-between items-center mb-6">
    <h1 class="text-4xl font-bold text-indigo-700"><%= @user.name %></h1>
    <% if current_user?(@user) %>
      <%= link_to "Edit profile", edit_user_path(@user),
                  class: "mt-4 sm:mt-0 sm:ml-4 inline-block rounded-md px-4 py-2.5 bg-indigo-600 hover:bg-indigo-500 text-white font-medium" %>
    <% end %>
  </div>

  <div class="bg-white border border-gray-200 shadow-sm rounded-lg p-6 mb-8">
    <p class="text-lg text-gray-700"><strong>Email:</strong> <%= @user.email %></p>
    <p class="text-sm text-gray-500 mt-2">Account created at <%= @user.created_at.strftime("%B %d, %Y") %></p>
  </div>

  <h2 class="text-2xl font-semibold text-gray-800 mb-4">Microposts</h2>

  <% if @user.microposts.any? %>
    <ul class="space-y-4">
      <% @user.microposts.each do |micropost| %>
        <li class="p-4 bg-white shadow rounded-md border border-gray-100">
          <p class="text-gray-800 text-lg"><%= micropost.content %></p>
          <p class="text-sm text-gray-500 mt-1">Posted <%= time_ago_in_words(micropost.created_at) %> ago</p>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-500">No microposts yet.</p>
  <% end %>

  <%= link_to "Back to users", users_path,
              class: "inline-block mt-6 text-center rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-50 font-medium" %>
</div>
