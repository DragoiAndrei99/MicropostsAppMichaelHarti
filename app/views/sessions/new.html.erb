<% content_for :title, "Log in" %>

<%= form_with(scope: :session, url: login_path, local: true, class: "max-w-md mx-auto space-y-4") do |f| %>
  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
  </div>

  <div>
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
  </div>

  <div class="flex items-center">
    <%= f.check_box :remember_me, class: "mr-2" %>
    <%= f.label :remember_me, "Remember me", class: "text-sm text-gray-600" %>
  </div>

  <div>
    <%= f.submit "Log in", class: "w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md bg-indigo-600 text-white hover:bg-indigo-700" %>
  </div>
<% end %>
