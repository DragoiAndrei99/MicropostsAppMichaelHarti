<% content_for :title, "Log in" %>

<div class="max-w-lg mx-auto">
  <h1 class="text-4xl font-bold mb-6">Log in</h1>

  <%= form_with(url: login_path, local: true, class: "space-y-6") do |f| %>
    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="mt-4">
      <%= check_box_tag :remember_me, 1, false, id: 'remember_me' %>
      <%= label_tag :remember_me, "Remember me", class: "ml-2 text-sm text-gray-600" %>
    </div>

    <div>
      <%= f.submit "Log in", class: "bg-indigo-600 hover:bg-indigo-500 text-white font-semibold px-4 py-2 rounded-md" %>
    </div>
  <% end %>
</div>
