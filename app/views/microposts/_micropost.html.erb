<% if micropost.image.attached? %>
  <%= image_tag micropost.image.variant(resize_to_limit: [500, 500]) %>
<% end %>


<div id="<%= dom_id micropost %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Content:</strong>
    <%= micropost.content %>
  </div>
  <div>
    <strong class="block font-medium mb-1">User:</strong>
    <%= micropost.user_id %>
  </div>
</div>
