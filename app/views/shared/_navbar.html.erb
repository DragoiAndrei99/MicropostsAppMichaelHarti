<header class="bg-white shadow">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <h1 class="text-xl font-bold">
      <%= link_to "MicropostApp", root_path, class: "text-indigo-600 hover:text-indigo-800" %>
    </h1>

    <nav class="space-x-4">
      <%= link_to "Home", root_path, class: "text-gray-700 hover:text-indigo-600" %>
      <%= link_to "Help", help_path, class: "text-gray-700 hover:text-indigo-600" %>
      <%= link_to "About", about_path, class: "text-gray-700 hover:text-indigo-600" %>
      <%= link_to "Contact", contact_path, class: "text-gray-700 hover:text-indigo-600" %>
      <%= link_to "Users", users_path, class: "text-gray-700 hover:text-indigo-600" %>
      <%= link_to "Microposts", microposts_path, class: "text-gray-700 hover:text-indigo-600" %>

      <% if logged_in? %>
        <%= link_to current_user.name, current_user, class: "text-gray-700 font-semibold hover:text-indigo-600" %>
        <%= button_to "Log out", logout_path, method: :delete,
                      form_class: "inline", class: "text-red-700 hover:text-indigo-600 font-medium px-1" %>
      <% else %>
        <%= link_to "Log in", login_path, class: "text-gray-700 hover:text-indigo-600" %>
        <%= link_to "Sign up", signup_path, class: "text-gray-700 hover:text-indigo-600" %>
      <% end %>
    </nav>
  </div>
</header>
