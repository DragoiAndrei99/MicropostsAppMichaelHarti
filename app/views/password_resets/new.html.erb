<h1 class="text-xl font-semibold mb-4">Forgot your password?</h1>

<%= form_with url: password_resets_path, scope: :password_reset, local: true, class: "max-w-md space-y-4" do |f| %>
  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm", autofocus: true %>
  </div>

  <div>
    <%= f.submit "Submit", class: "w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700" %>
  </div>
<% end %>
